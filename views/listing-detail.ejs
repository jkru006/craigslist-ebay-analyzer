<!DOCTYPE html>
<html>
<head>
  <title><%= listing.title %> - Resale Value Analyzer</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/style.css">
  <script src="/scripts.js" defer></script>
  <% if (listing.mapLat && listing.mapLng) { %>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBDaeWicvigtP9xPv919E-RNoxfvC-Hqik&callback=initMap" async defer></script>
    <script>
      function initMap() {
        const location = { lat: <%= listing.mapLat %>, lng: <%= listing.mapLng %> };
        const map = new google.maps.Map(document.getElementById('map'), {
          zoom: 14,
          center: location,
          mapTypeControl: true,
          scrollwheel: false,
          streetViewControl: true
        });
        
        // Add a marker at the listing location
        const marker = new google.maps.Marker({
          position: location,
          map: map,
          title: '<%= listing.title %>'
        });
        
        // Add a circle to show approximate location (not exact)
        const circle = new google.maps.Circle({
          strokeColor: '#FF0000',
          strokeOpacity: 0.3,
          strokeWeight: 1,
          fillColor: '#FF0000',
          fillOpacity: 0.1,
          map: map,
          center: location,
          radius: 500 // 500 meters approximate location
        });
      }
    </script>
  <% } %>
  <style>
    .detail-container {
      padding: 20px;
      max-width: 1200px;
      margin: 0 auto;
    }
    
    .detail-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }
    
    .detail-title {
      flex: 1;
      margin-right: 20px;
    }
    
    .detail-price {
      font-size: 24px;
      font-weight: bold;
      color: #2c3e50;
      background-color: #f8f9fa;
      padding: 10px 15px;
      border-radius: 5px;
      white-space: nowrap;
    }
    
    .image-gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 15px;
      margin-bottom: 30px;
    }
    
    .gallery-image {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-radius: 5px;
      cursor: pointer;
      transition: transform 0.2s;
    }
    
    .gallery-image:hover {
      transform: scale(1.02);
    }
    
    .main-image-container {
      margin-bottom: 15px;
    }
    
    .main-image {
      width: 100%;
      max-height: 500px;
      object-fit: contain;
      border-radius: 5px;
    }
    
    .detail-section {
      margin-bottom: 30px;
    }
    
    .detail-section h3 {
      border-bottom: 1px solid #e9ecef;
      padding-bottom: 10px;
      margin-bottom: 15px;
    }
    
    .description {
      white-space: pre-line;
      line-height: 1.6;
    }
    
    .attributes-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 10px;
    }
    
    .attribute-item {
      display: flex;
      padding: 8px;
      background-color: #f8f9fa;
      border-radius: 4px;
    }
    
    .attribute-label {
      font-weight: bold;
      margin-right: 10px;
      color: #495057;
      flex: 1;
    }
    
    .attribute-value {
      flex: 2;
    }
    
    .map-container {
      height: 400px;
      border-radius: 5px;
      overflow: hidden;
      margin-bottom: 30px;
    }
    
    .resale-info {
      background-color: #f8f9fa;
      padding: 20px;
      border-radius: 5px;
      margin-bottom: 30px;
    }
    
    .profit-info {
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
    }
    
    .profit-item {
      flex: 1;
      min-width: 200px;
      margin: 10px;
      padding: 15px;
      border-radius: 5px;
      background-color: white;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      text-align: center;
    }
    
    .profit-item h4 {
      margin-top: 0;
      color: #6c757d;
      font-size: 14px;
      text-transform: uppercase;
    }
    
    .profit-value {
      font-size: 28px;
      font-weight: bold;
      margin: 10px 0;
    }
    
    .positive-profit .profit-value {
      color: #28a745;
    }
    
    .negative-profit .profit-value {
      color: #dc3545;
    }
    
    .sale-time-fast {
      color: #28a745;
    }
    
    .sale-time-medium {
      color: #fd7e14;
    }
    
    .sale-time-slow {
      color: #6c757d;
    }
    
    .action-buttons {
      display: flex;
      gap: 10px;
      margin-top: 20px;
    }
    
    .action-button {
      padding: 10px 15px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      text-align: center;
      text-decoration: none;
      flex: 1;
      display: inline-block;
    }
    
    .back-button {
      background-color: #6c757d;
      color: white;
    }
    
    .ebay-button {
      background-color: #e53238;
      color: white;
    }
    
    .contact-button {
      background-color: #28a745;
      color: white;
    }
    
    .original-button {
      background-color: #007bff;
      color: white;
    }
    
    .posted-info {
      font-style: italic;
      color: #6c757d;
      margin-bottom: 15px;
    }
    
    /* Responsive fixes */
    @media (max-width: 768px) {
      .detail-header {
        flex-direction: column;
      }
      
      .detail-price {
        margin-top: 10px;
        align-self: flex-start;
      }
      
      .profit-info {
        flex-direction: column;
      }
      
      .action-buttons {
        flex-direction: column;
      }
    }
    
    /* Image modal */
    .image-modal {
      display: none;
      position: fixed;
      z-index: 1000;
      padding-top: 50px;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0,0,0,0.9);
    }
    
    .modal-content {
      margin: auto;
      display: block;
      max-width: 90%;
      max-height: 80%;
    }
    
    .close-modal {
      position: absolute;
      top: 15px;
      right: 35px;
      color: #f1f1f1;
      font-size: 40px;
      font-weight: bold;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="container detail-container">
    <div class="detail-header">
      <div class="detail-title">
        <a href="/" class="back-button action-button">‚Üê Back to Listings</a>
        <h1><%= listing.title %></h1>
        <p class="posted-info">Posted: <%= listing.postedDate %></p>
      </div>
      <div class="detail-price"><%= listing.price %></div>
    </div>
    
    <div class="resale-info">
      <h2>Resale Analysis</h2>
      <div class="profit-info">
        <div class="profit-item">
          <h4>Craigslist Price</h4>
          <div class="profit-value"><%= listing.price %></div>
        </div>
        
        <div class="profit-item">
          <h4>eBay Resale Value</h4>
          <div class="profit-value">$<%= listing.resaleValue %></div>
        </div>
        
        <div class="profit-item <%= listing.hasProfit ? 'positive-profit' : 'negative-profit' %>">
          <h4>Potential Profit</h4>
          <div class="profit-value">$<%= listing.profit %></div>
        </div>
        
        <div class="profit-item">
          <h4>Avg. Sale Time</h4>
          <div class="profit-value <%= listing.avgSaleTime <= 3 ? 'sale-time-fast' : (listing.avgSaleTime <= 7 ? 'sale-time-medium' : 'sale-time-slow') %>">
            <%= listing.avgSaleTime %> days
          </div>
        </div>
      </div>
    </div>
    
    <% if (listing.images && listing.images.length > 0) { %>
      <div class="detail-section">
        <div class="main-image-container">
          <img src="<%= listing.images[0] %>" alt="<%= listing.title %>" class="main-image" id="mainImage">
        </div>
        
        <% if (listing.images.length > 1) { %>
          <div class="image-gallery">
            <% listing.images.forEach((img, index) => { %>
              <img src="<%= img %>" alt="<%= listing.title %> - Image <%= index + 1 %>" class="gallery-image" 
                  onclick="document.getElementById('mainImage').src='<%= img %>'; openImageModal('<%= img %>');">
            <% }); %>
          </div>
        <% } %>
      </div>
    <% } %>
    
    <div class="detail-section">
      <h3>Description</h3>
      <div class="description"><%= listing.description %></div>
    </div>
    
    <% if (listing.attributes && Object.keys(listing.attributes).length > 0) { %>
      <div class="detail-section">
        <h3>Item Details</h3>
        <div class="attributes-list">
          <% Object.entries(listing.attributes).forEach(([key, value]) => { %>
            <div class="attribute-item">
              <span class="attribute-label"><%= key %>:</span>
              <span class="attribute-value"><%= value %></span>
            </div>
          <% }); %>
        </div>
      </div>
    <% } %>
    
    <% if (listing.mapLat && listing.mapLng) { %>
      <div class="detail-section">
        <h3>Location</h3>
        <% if (listing.mapAddress) { %>
          <p><%= listing.mapAddress %></p>
        <% } %>
        <div id="map" class="map-container"></div>
      </div>
    <% } %>
    
    <div class="action-buttons">
      <a href="/" class="action-button back-button">Back to Listings</a>
      <a href="<%= listing.url %>" target="_blank" class="action-button original-button">View Original Listing</a>
      <a href="https://www.ebay.com/sch/i.html?_nkw=<%= encodeURIComponent(listing.title.split('-')[0].trim()) %>&LH_Sold=1" target="_blank" class="action-button ebay-button">Check on eBay</a>
    </div>
  </div>
  
  <!-- Image Modal -->
  <div id="imageModal" class="image-modal">
    <span class="close-modal" onclick="closeImageModal()">&times;</span>
    <img class="modal-content" id="modalImg">
  </div>
  
  <script>
    // Image modal functionality
    function openImageModal(src) {
      const modal = document.getElementById('imageModal');
      const modalImg = document.getElementById('modalImg');
      modal.style.display = "block";
      modalImg.src = src;
    }
    
    function closeImageModal() {
      document.getElementById('imageModal').style.display = "none";
    }
    
    // Close modal when clicking outside the image
    window.onclick = function(event) {
      const modal = document.getElementById('imageModal');
      if (event.target == modal) {
        closeImageModal();
      }
    }
    
    // Navigate with arrow keys in the gallery
    document.addEventListener('keydown', function(e) {
      if (document.getElementById('imageModal').style.display === "block") {
        if (e.key === "Escape") {
          closeImageModal();
        }
        
        const images = Array.from(document.querySelectorAll('.gallery-image')).map(img => img.src);
        const currentIndex = images.indexOf(document.getElementById('modalImg').src);
        
        if (e.key === "ArrowRight" && currentIndex < images.length - 1) {
          document.getElementById('modalImg').src = images[currentIndex + 1];
          document.getElementById('mainImage').src = images[currentIndex + 1];
        } else if (e.key === "ArrowLeft" && currentIndex > 0) {
          document.getElementById('modalImg').src = images[currentIndex - 1];
          document.getElementById('mainImage').src = images[currentIndex - 1];
        }
      }
    });
  </script>
</body>
</html>
